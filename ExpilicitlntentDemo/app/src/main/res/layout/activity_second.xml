<?xml version="1.0" encoding="utf-8"?>
<!-- Root LinearLayout for the second activity, arranges children vertically -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSecond"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:orientation="vertical"
    tools:context=".SecondActivity">

    <!-- TextView to display a welcome message -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewWelcome"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"
        />

    <!-- TextView to display the name received from the main activity -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewResult"
        android:text="Name will appear here"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        />

    <!-- Button to proceed to the thank you screen (third activity) -->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonThanks"
        android:text="Thank You!"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        />

</LinearLayout>
