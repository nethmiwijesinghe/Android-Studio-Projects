<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/ruwanwalisaya"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/buttonruwanweliseya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Ruwanweliseya"
        />
    <Button
        android:id="@+id/buttonsigiriya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Sigiriya"
        />

    <Button
        android:id="@+id/buttonpinnawala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Pinnawala Zoo"
        />

</LinearLayout>